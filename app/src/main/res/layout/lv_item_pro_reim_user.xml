<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">
    <!--
  `user_name` varchar(60) NOT NULL,
  `password` varchar(2048) NOT NULL DEFAULT 'f1f4e30acef64bd0d346b050e73289e7',
  `mobile_phone_number` varchar(16) NOT NULL DEFAULT '暂无',
  `department` varchar(30) NOT NULL DEFAULT '暂无',
  `email` varchar(60) NOT NULL DEFAULT '暂无',
  `reim_user_job_number` varchar(1024) NOT NULL DEFAULT '无',
  `reim_user_dept_time` varchar(30) NOT NULL DEFAULT '无',
  `reim_user_gender` varchar(30) NOT NULL DEFAULT '无',
  `reim_usr_age` varchar(16) NOT NULL DEFAULT '无',
    -->
    <TextView
        android:id="@+id/lv_item_pro_reim_user_name"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="姓名"
        android:ellipsize="marquee"
        />
    <TextView
        android:id="@+id/lv_item_pro_reim_mobile_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/lv_item_pro_reim_user_name"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="手机号"
        />
    <TextView
        android:id="@+id/lv_item_pro_reim_user_job_number"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:text="报销人工号"
        android:layout_marginRight="20dp"
        android:gravity="center"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <TextView
        android:id="@+id/tv_lv_item_uniform_cost_type"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="消费1"
        android:ellipsize="marquee"
        />
    <TextView
        android:id="@+id/tv_lv_item_uniform_cost_start_date"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_lv_item_uniform_cost_type"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="消费日期"
        />
    <TextView
        android:id="@+id/tv_lv_item_uniform_other_info"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_lv_item_uniform_cost_type"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:text="otherInfo"
        />
    <TextView
        android:id="@+id/tv_lv_item_uniform_cost_amount"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        android:text="30.0"
        android:layout_marginRight="20dp"
        android:gravity="center"
        />
</RelativeLayout>
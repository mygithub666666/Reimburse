<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <CheckBox
            android:id="@+id/btn_listview_waitselect"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:focusable="false"
             />

        <TextView
            android:id="@+id/xiaofei_title_waitselect"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/btn_listview_waitselect"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="30sp"
            android:text="消费1"
            android:ellipsize="marquee"
            />
        <TextView
            android:id="@+id/xiaofei_date_waitselect"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/xiaofei_title_waitselect"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="消费日期"
            />
        <TextView
            android:id="@+id/xiaofei_picuris_waitselect"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/xiaofei_date_waitselect"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="图片uri"
            />
        <TextView
            android:id="@+id/xiaofei_count_waitselect"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:textSize="30sp"
            android:text="30.0"
            android:layout_marginRight="20dp"
            android:gravity="center"
            />


    </RelativeLayout>


</LinearLayout>
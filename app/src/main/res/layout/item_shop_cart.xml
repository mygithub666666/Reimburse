<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<include layout="@layout/tianxiexiaofeijilu"/>-->
    <!--线性布局-->
    <RelativeLayout
        android:id="@+id/xiaofei_form_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <CheckBox
                android:id="@+id/cb_expense_submit"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:clickable="false" />


            <TextView
                android:id="@+id/tv_title_cart"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/cb_expense_submit"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="30sp"
                android:text="消费1"
                android:ellipsize="marquee"
                />
            <TextView
                android:id="@+id/tv_date_cart"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/tv_title_cart"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:text="消费日期"
                />
            <TextView
                android:id="@+id/tv_picuris_cart"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_toRightOf="@+id/tv_date_cart"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:text="图片uri"
                />
            <TextView
                android:id="@+id/tv_money_cart"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:text="30.0"
                android:layout_marginRight="20dp"
                android:gravity="center"
                />


        </RelativeLayout>




    </RelativeLayout>


    <!--线-->
    <View
        android:layout_below="@+id/xiaofei_form_show"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#22000000" />


</LinearLayout>